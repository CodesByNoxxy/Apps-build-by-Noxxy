<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintBottom_toTopOf="@id/loginLayout"
        app:layout_constraintLeft_toLeftOf="@+id/main"
        app:layout_constraintRight_toRightOf="@id/main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music app"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/text1"
        app:layout_constraintRight_toRightOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintRight_toRightOf="@id/main">

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:autofillHints="emailAddress"
            android:textColorHint="@color/black"
            android:background="@drawable/input_background"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:hint="password"
            android:autofillHints="password"
            android:textColorHint="@color/black"
            android:background="@drawable/input_background"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/white"
            android:backgroundTint="#00001f"
            android:layout_marginTop="23dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------ or ------"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnsignupRedirect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Sign Up"
            android:backgroundTint="#00001f"

            android:layout_gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>